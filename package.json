{
  "name": "hr-server-ts",
  "version": "1.0.0",
  "description": "Node.js server and middleware for Oracle HR schema (TypeScript)",
  "main": "dist/server.js",
  "scripts": {
    "lint": "eslint src",
    "format:check": "prettier --config ./.prettierrc --list-different \"src/**/*{.ts,.json}\"",
    "format:fix": "prettier --config ./.prettierrc --write \"src/**/*{.ts,.json}\"",
    "build": "tsc",
    "dev": "nodemon dist/server.js",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "cy:run": "cypress run --browser chrome",
    "cy:open": "cypress open --browser chrome",
    "cy:test": "cypress run --headless --browser chrome",
    "postinstall": "npx husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anirbmuk/hr-server-ts.git"
  },
  "keywords": [
    "hr",
    "oracle",
    "node",
    "express",
    "typescript"
  ],
  "author": "anirbmuk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anirbmuk/hr-server-ts/issues"
  },
  "homepage": "https://github.com/anirbmuk/hr-server-ts#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.24",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "cypress": "^9.5.4",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  }
}
